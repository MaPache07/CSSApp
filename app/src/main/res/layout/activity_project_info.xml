<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:padding="@dimen/normal_padding">
    <TextView
        android:id="@+id/project_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="start"
        android:hint="Nombre del proyecto"
        android:textSize="@dimen/big_text_size"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:layout_marginBottom="@dimen/normal_padding"/>
    <TextView
        android:id="@+id/on_charge"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="start"
        android:hint="Encargado"
        android:textAllCaps="true"
        android:textSize="@dimen/normal_text_size"
        android:layout_below="@id/project_name"
        android:layout_marginBottom="@dimen/normal_padding"/>
    <TextView
        android:id="@+id/project_duration"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="start"
        android:hint="Duracion"
        android:textSize="@dimen/normal_text_size"
        android:layout_below="@id/on_charge"
        android:layout_marginBottom="@dimen/normal_padding"/>
    <TextView
        android:id="@+id/project_type"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="start"
        android:hint="Tipo de horas"
        android:textSize="@dimen/normal_text_size"
        android:layout_below="@id/project_duration"
        android:layout_marginBottom="@dimen/normal_padding"/>
    <TextView
        android:id="@+id/project_cupos"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="start"
        android:hint="Cupos"
        android:textSize="@dimen/normal_text_size"
        android:layout_below="@id/project_type"
        android:layout_marginBottom="@dimen/normal_padding"/>
    <TextView
        android:id="@+id/project_description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="start"
        android:hint="Descripcion"
        android:textSize="@dimen/normal_text_size"
        android:layout_below="@id/project_cupos"
        android:layout_marginBottom="@dimen/normal_padding"/>
    <Button
        android:id="@+id/apply_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/apply"
        android:layout_below="@id/project_description"
        android:textSize="@dimen/small_text_size">
    </Button>
</RelativeLayout>