<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.settings.SettingsFragment">
    <ImageView
        android:id="@+id/profile_pic"
        android:layout_width="120dp"
        android:layout_height="150dp"
        android:src="@drawable/uca"
        android:layout_alignParentStart="true"
        android:padding="@dimen/normal_padding"
        android:adjustViewBounds="true"/>
    <TextView
        android:id="@+id/info_names"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="nombres"
        android:textSize="@dimen/normal_text_size"
        android:textStyle="bold"
        android:layout_toEndOf="@id/profile_pic"
        android:layout_above="@id/info_email"
        android:layout_marginBottom="@dimen/normal_padding"
        android:textColor="@color/black"/>
    <TextView
        android:id="@+id/info_email"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="e-mail"
        android:textSize="@dimen/normal_text_size"
        android:layout_toEndOf="@id/profile_pic"
        android:layout_above="@id/info_major"
        android:paddingBottom="@dimen/normal_padding"
        android:textColor="@color/black"/>
    <TextView
        android:id="@+id/info_major"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="carrera"
        android:textSize="@dimen/normal_text_size"
        android:layout_below="@id/profile_pic"
        android:layout_marginHorizontal="@dimen/normal_padding"
        android:paddingBottom="@dimen/normal_padding"
        android:textColor="@color/black"/>
    <Button
        android:id="@+id/logout_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/log_out"

        android:layout_marginLeft="@dimen/normal_padding"
        android:layout_marginRight="@dimen/normal_padding"
        android:layout_below="@id/info_major"
        android:textSize="@dimen/small_text_size">
    </Button>
</RelativeLayout>